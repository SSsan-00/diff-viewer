{
  "name": "diff-viewer",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:single:readable": "vite build",
    "build:single:minify:raw": "MINIFY=true OUT_DIR=dist-min vite build",
    "build:single:minify": "pnpm run build:single:minify:raw && node scripts/assemble-dist.mjs --minify-only",
    "build:single": "pnpm run build:single:readable && pnpm run build:single:minify:raw && node scripts/assemble-dist.mjs && pnpm run verify:dist",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "verify:dist": "node scripts/verify-dist.mjs",
    "perf:capture": "node scripts/perf-compare.mjs capture --auto-dev",
    "perf:compare": "node scripts/perf-compare.mjs compare"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.4.0",
    "jsdom": "^27.4.0",
    "terser": "^5.43.1",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-singlefile": "^2.0.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "monaco-editor": "^0.55.1"
  },
  "packageManager": "pnpm@10.22.0"
}
